# sudo wrapper which is able to expand aliases and handle noglob/nocorrect builtins

emulate -L zsh

integer glob=1
local -a run

run=(command sudo)

if [[ $# -gt 1 && $1 = -u ]]; then
    run+=($1 $2)
    shift; shift
fi

while (( $# )); do
    case $1 in
        command|exec|-) shift; break ;;
        nocorrect) shift ;;
        noglob) glob=0; shift ;;
        *) break ;;
    esac
done

if (( glob )); then
    $run $~==*
else
    $run $==*
fi

# vim: ft=zsh
